@model UserMng.Core.ViewModels.PanelAdmin.ChangeUserPasswordModel

@{
    Layout = null;
}

<div class="modal fade bd-example-modal-lg" id="changePass" tabindex="-1" data-backdrop="static" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form id="frmpass" method="post">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">درج کلمه عبور برای  (@Model.UserName)</h5>
                    <button type="button" onclick="Close()" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group text-right">
                                <input type="hidden" asp-for="Id">
                                <input type="hidden" asp-for="UserName">
                                <label class="control-label ">کلمه عبور</label>
                                <input type="password" asp-for="Password" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group text-right">
                                <label class="control-label ">تایید کلمه عبور</label>
                                <input type="password" asp-for="ConfirmPassword" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="SendForm('/Admin/user/Changepassword','frmpass')" class="btn btn-warning">تایید</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    function Close() {
        $(document).ready(function () {
            $('#changePass').remove();
            $('.modal-backdrop').remove();
        });
    }
</script>